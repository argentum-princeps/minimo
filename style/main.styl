* {
  margin 0
  padding 0
  box-sizing border-box
}

input, button {
  &:focus {
    outline: 0 !important;
  }
}

a {
  display block
  text-decoration none
  cursor pointer
}

button {
  cursor pointer
}

ul {
  list-style none
}

img {
  display block
  width 100%
  height auto
}

$font-main = 'Playfair Display', serif;
$ubuntu = 'Ubuntu', sans-serif;

$color-main = #fff
$gray = #f0f0f0

sm = 425px
md = 768px
lg = 1024px

body {
  max-width 100%
  margin 0 auto
}

.header {
  background $color-main
  margin 70px
  text-align center
  display flex
  flex-direction row
  justify-content space-between
  align-items center

  @media (max-width md) {
    margin 60px 30px
  }

  @media (max-width sm) {
    margin 50px 30px
  }

  &__nav-list {
    display flex
    flex-direction row
    justify-content space-around
    align-items center

    @media (max-width md) {
      display none                     //!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
    }
  }

  &__nav-list-item {
    margin-left 100px

    @media (max-width lg) {
      margin-left 70px
    }

    &:first-child {
      margin-left 0
    }
  }
}

.nav-link {
  color: #626262;
  font-family: $font-main
  font-size: 14px;
  line-height: 24px;
  text-transform: uppercase;
  transition opacity .3s

  &:hover {
    opacity .7
  }
}

.main-article {
  background $color-main
  margin 70px
  text-align left

  @media (max-width md) {
    margin 30px
  }

  &__img{
    margin-bottom 70px

    @media (max-width lg) {
      margin-bottom 50px
    }
  }
}

.container {
  margin 0 auto
  max-width 900px
}

.tag-link, .main-article__link {
  color: #b4ad9e;
  font-family: $ubuntu;
  font-size: 14px;
  font-weight: 300;
  text-transform: uppercase;
  transition opacity .3s

  &:hover {
    opacity .7
  }
}

.main-article__link {
  margin-top 50px
  &:hover {
    opacity 1
  }

  @media (max-width lg) {
    margin-top 40px
  }

  @media (max-width md) {
    margin-top 30px
  }
}

.article__title {
  color: #626262;
  font-family: $font-main;
  font-size: 30px;
  font-weight: 400;
  margin 28px 0 34px

  @media (max-width lg) {
    margin 24px 0 30px
  }

  @media (max-width md) {
    margin 20px 0 26px
  }
}

.article__text {
  color: #626262;
  font-family: $font-main;
  font-size: 14px;
  font-weight: 400;
  line-height: 24px;
}

.article__link {
  width 100%
  margin-bottom 30px

  @media (max-width lg) {
    margin-bottom 25px
  }
}

.catalog {
   background $color-main
   text-align center

   &__main-list{
     display flex
     flex-wrap wrap
     justify-content space-between
     align-items center
     align-content center

     @media (max-width lg) {
       display flex
       flex-direction column
       align-items center
     }
   }

   &__item {
     text-align left
     margin 65px 0
     width 48%
     display block

     @media (max-width lg) {
       width 80%
       display flex
       flex-direction column
       align-items center
       margin 55px 0
     }

     @media (max-width md) {
       width 100%
       padding 30px
       margin 25px
     }
   }

   &__more-btn {
     background $color-main
     width: 166px;
     height: 62px;
     border: 1px solid #626262;
     color: #626262;
     font-family: $font-main;
     font-size: 20px;
     font-weight: 400;
     line-height: 24px;
     margin 65px auto 130px
     transition: all 1250ms cubic-bezier(0.19, 1, 0.22, 1);
     border-radius 0

     &:hover {
       border: 4px solid;
       font-weight 900;
       letter-spacing 1.5px
       opacity .9
     }

     @media (max-width lg) {
       width 146px
       height 52px
       margin 30px auto 110px
     }
   }
 }

.subscribe {
  width 100%
  margin 0
  background $gray
  text-align center
  overflow hidden

  &__title {
    color: #333333;
    font-family: $font-main;
    font-size: 30px;
    font-weight: 400;
    letter-spacing: 0.75px;
    margin-top 74px
    margin-bottom 80px

    @media (max-width sm) {
      font-size 20px
    }
  }

  &__email-input {
    text-align left
    width 400px
    background $gray
    border 0
    border-bottom solid 1px #000000
    color: #626262;
    font-family: $font-main
    font-size: 14px;
    font-weight: 400;
    line-height: 24px;
    padding-right 35px

    @media (max-width sm) {
      width 90%
    }
  }

  &__submit {
    border 0
    background $gray
    margin-left -35px
    transition opacity .3s

    &:focus {
      border none
    }

    &:hover {
      opacity .7
    }
  }

  &__form {
    margin-bottom 74px
  }
}

.footer {
  padding 45px 70px
  background $gray
  display flex
  flex-direction row
  justify-content space-between
  align-items center

  @media (max-width md) {
    padding 45px 30px
  }

  @media (max-width 500px) {
    flex-direction column
    padding 30px 30px
  }

  &__links {
    display flex
    flex-direction row
    justify-content flex-start
    align-items center
    transition opacity .3s

    &:hover {
      opacity .7
    }
  }

  &__link {
    color: #000000;
    font-family: $font-main;
    font-size: 14px;
    font-weight: 400;
    line-height: 24px;
    margin-right 20px
    transition opacity .3s

    &:hover {
      opacity .7
    }

    @media (max-width md) {
      margin 10px
    }
    @media (max-width sm) {
      margin auto 5px
    }
  }

  &__sm-links {
    display flex
    flex-direction row
    justify-content flex-end
    align-items center

  }

  &__sm-links-title {
    color: #000000;
    font-family: $font-main;
    font-size: 14px;
    font-weight: 400;
    line-height: 24px;
  }
}

.sm-list {
    display flex
    flex-direction row
    justify-content flex-end
    align-items center
}

.sm-list-item {
  margin-left 20px
  transition opacity .3s

  &:hover {
    opacity .7
  }

  @media (max-width md) {
    margin 10px
  }
}


.tag-link, .article__title {
    align-self left
  }

.burger {
  display none
  height: 22px;
  width: 40px;
  cursor: pointer;
  position: relative;
  background: url("../img/burger-nav.png") no-repeat;
  text-indent: -9999px;
  border: 0;
  outline: none

  @media (max-width md) {
    display: block;
  }
}

.article__title-link {
  transition opacity .3s

  &:hover {
    opacity .7
  }
}

.article__link, .main-article__img-link {
  transition opacity .3s

  &:hover {
    opacity .7
  }
}


.overlay {
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  background-color: rgb(0,0,0);
  background-color: rgba(0,0,0, 0.9);
  overflow-x: hidden;
  transition: 0.5s;
}

.overlay-content {
  position: relative;
  top: 25%;
  width: 100%;
  text-align: center;
  margin-top: 30px;
}

.overlay a {
  font-family $font-main
  padding: 8px;
  text-decoration: none;
  font-size: 36px;
  color: #818181;
  text-transform uppercase
  display: block;
  transition: 0.3s;
}

.overlay a:hover, .overlay a:focus {
  color: #f1f1f1;
}

.overlay .closebtn {
  position: absolute;
  top: 20px;
  right: 45px;
  font-size: 60px;
}

@media screen and (max-height: 450px) {
  .overlay a {font-size: 20px}
  .overlay .closebtn {
    font-size: 40px;
    top: 15px;
    right: 35px;
  }
}